---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
export interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Biscuit da Isa - Artesanato em Biscuit',
  description = 'Loja de artesanato em biscuit, chaveiros, apliques e peças personalizadas feitas a mão.'
} = Astro.props;
---
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/png" href="/foto-perfil.png" />
    <link rel="apple-touch-icon" href="/foto-perfil.png" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&display=swap" rel="stylesheet">
  </head>

  <body class=" font-sans"> 
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>