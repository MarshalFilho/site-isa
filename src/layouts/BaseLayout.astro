---
import Header from '../components/Header.vue';
import Footer from '../components/Footer.astro';
import { Icon } from 'astro-icon/components';
import '../styles/global.css';
export interface Props {
  title?: string;
  description?: string;
}
const {
  title = 'Biscuit da Isa - Artesanato em Biscuit',
  description = 'Loja de artesanato em biscuit, chaveiros, apliques e peças personalizadas feitas a mão.'
} = Astro.props;
---
<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="icon" type="image/png" href="/foto-perfil.png" />
    <link rel="apple-touch-icon" href="/foto-perfil.png" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&display=swap" rel="stylesheet">
  </head>

  <body class=" font-sans"> 
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer />
    <a 
      href="https://www.instagram.com/isa_biscuits16?utm_source=ig_web_button_share_sheet&igsh=MW1sa2h0ZnV3ZW94" 
      target="_blank" 
      rel="noopener noreferrer"
      aria-label="Siga-nos no Instagram"
      class="fixed bottom-6 right-6 z-50 p-3 rounded-full shadow-lg transition-transform hover:scale-110 bg-gradient-to-br from-purple-600 via-pink-500 to-orange-400"
    >
      <Icon name="mdi:instagram" class="w-6 h-6 text-white" />
    </a>
  </body>
</html>